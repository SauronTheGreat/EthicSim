<%= content_for(:header_section) do %>
  <p> Quizzes and Surveys</p>
  <% end %>
<% if @surveys.blank? %>
  <h4>No Questionnaires added yet !</h4>
    <h4>Click here to add a new Questionnaire</h4>
  <% end %>

<table width="85%" style="margin: auto">
  <tr>

	<td width="10%"></td>
	<td colspan="3"><%= link_to image_tag('/images/add_user_off.png', :style=>"width:50px;height:50px;", :class=>'rollover', :title=>'New Questionnaire'), new_questionnaire_path %></td>
  </tr>
  <% @surveys.each do |questionnaire| %>
	<tr>
	  <td style="text-align: left;border: solid 1px #000000"><%= questionnaire.name.titleize %></td>
	  <td width="10%"></td>
	  <td class="blacky"><%= link_to image_tag('/images/menu/settings_icon_off.png', :style=>"width:50px;height:50px;", :class=>'rollover', :title=>'Manage'), new_question_path(:questionnaire_id=>questionnaire.id) %></td>
	  <td class="blacky"><%= link_to image_tag('/images/menu/rename_icon_off.png', :style=>"width:40px;height:40px;", :class=>'rollover', :title=>'Rename'), edit_questionnaire_path(questionnaire) %></td>
	  <td class="blacky"><%= link_to image_tag('/images/menu/delete-icon_off.png', :style=>"width:45px;height:45px;", :class=>'rollover', :title=>'Delete'), questionnaire, :confirm => 'Are you sure?', :method => :delete %></td>

	</tr>
  <% end %>
</table>
<br/>
<br/>
